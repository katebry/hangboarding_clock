---
import Layout from '../layouts/Layout.astro';
import Clock from '../components/Clock';
import Timer from '../components/Timer';
---

<Layout title="Hangboarding clock">
	<main>
		<h1>Time your hangs ⏱👇🏻</h1>
		<div class="main-content">
				<Clock client:load></Clock>
		</div>
		<div class="set-section">
			<Timer client:load/>
		</div>
	</main>
</Layout>

<style>
	main {
		display: grid;
		grid-template-columns: 1fr 5fr 1fr;
		grid-template-rows: repeat(5, 1fr);
		grid-column-gap: 0px;
		grid-row-gap: 0px;
		height: 90vh;
		width: 100vw;
	}
	h1 {
		grid-area: 1 / 2 / 2 / 3;
		font-size: 3rem;
		font-weight: 800;
	}
	.main-content {
		grid-area: 2 / 2 / 4 / 3;
		font-size: 2em;
	}
	.set-section {
		grid-area: 4 / 2 / 5 / 3;
		display: flex;
		justify-content: center;
		font-size: 2em;
	}

</style>
